# This is the template for your .env 
# since .env will not be pushed to the repo
# create .env locally so you can run your code

# Database credentials
DB_NAME="db name"
DB_HOST="db host"
DB_USER="db user"
DB_PASSWORD="db password"
DB_PORT=

# Auth and email
JWT_SECRET="jwt secret"
OTP_SECRET="otp secret"

EMAIL_SERVICE_SMTP_HOST="smtp server eg smtp.gmail.com"
EMAIL_SERVICE_USER="your email"
EMAIL_SERVICE_APP_PASSWORD="your app password"
EMAIL_SERVICE_PORT=465

# External APIS
JSECRET_API_KEY=
GEMINI_API_KEY=

# Application credentials
PORT=3000
NODE_ENV=development

# logger levels
PINO_LOG_LEVEL_CONSOLE=info
PINO_LOG_LEVEL_FILE=trace

# Cache Redis Cloud from cloud.redis.io
REDIS_USERNAME=default
REDIS_PASSWORD=
REDIS_HOST=
REDIS_PORT=