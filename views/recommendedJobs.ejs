<%- include('includes/header.ejs', { subject: 'Your Job Recommendations' }) %>

<p>Hi <strong><%= user %></strong>,</p>
<% if (!recommendedJobs || recommendedJobs.length === 0) { %>
  <h3>No job recommendations available at the moment.</h3>
<% } else { %>
<p>Here are some jobs Smart AI Jobber thinks you’ll love:</p>

<ul>
  <% recommendedJobs.forEach(job => { %>
    <li>
      <strong><%= job.job_title %></strong> — <%= job.employer_name %><br>
      <a href="<%= job.job_apply_link %>" target="_blank">View Job</a>
    </li>
  <% }) %>
</ul>
<% } %>

<p>Keep exploring and good luck!</p>

<%- include('includes/footer.ejs') %>
